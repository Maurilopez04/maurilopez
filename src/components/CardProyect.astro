---
interface Props {
  title: string
  description: string
  img: string
  url: string
}

const { description, title, img, url } = Astro.props
---
<div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden dark:bg-slate-900">
    <div class="flex items-end justify-end h-56 w-full bg-cover" style={`background-image: url('${img}')`}>
        <a href={`${url}`} target="_blank" class="p-2 rounded-full bg-blue-600 text-white mx-5 -mb-4 hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5"/>
                <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z"/>
              </svg>
        </a>
    </div>
    <div class="px-5 py-3">
        <h3 class="text-gray-700 uppercase dark:text-white">{title}</h3>
        <span class="text-gray-500 mt-2">{description}</span>
    </div>
</div>